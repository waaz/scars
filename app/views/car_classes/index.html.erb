<h1>Listing Car Classes</h1>

<table>
  <tr>
    <th>Class Name</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @car_classes.each do |car_class| %>
  <tr>

    <td><%= car_class.id%></td>
    <td><%= car_class.car_class_name %></td>
    <td><%= car_class.description%></td>
    <td><%= car_class.tarrif %></td>
    <td><%= image_tag(car_class.image_url) %></td>
    <td><%= link_to 'Show', car_class %></td>
    <td><%= link_to 'Edit', edit_car_class_path(car_class) %></td>
    <td><%= link_to 'Destroy', car_class, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

