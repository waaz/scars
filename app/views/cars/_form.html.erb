<div id="CarForm">

<%= form_for(@car) do |f| %>
  <% if @car.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@car.errors.count, "error") %> prohibited this car from being saved:</h2>

      <ul>
      <% @car.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :reg, "Reg:" %>
    <%= f.text_field :reg %>
  </div>
  <div class="field">
    <%= f.label :model, "Model:" %>
    <%= f.text_field :model %>
  </div>
  <div class="field">
    <%= f.label :car_class_id, "Car class:" %>
    <%= f.collection_select(:car_class_id, CarClass.all, :id, :car_class_name) %>
  </div>
  <div class="field">
    <%= f.label :status, "Status:" %>
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
</div>
<br/>
<%= link_to @car, :id => "showLink" do %>
	<p><%= image_tag("arrow.png", :alt => "Arrow")%>Show</p>
<% end %> 
<%= link_to cars_path, :id => "backLink" do %>
	<p><%= image_tag("arrow.png", :alt => "Arrow")%>Back</p>
<% end %>

