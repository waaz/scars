<%= stylesheet_link_tag    "IndexCustomer" %>
<h1 id="listingCustomers"><%= image_tag("arrow.png", :alt => "Arrow")%>Listing Customers</h1>

<div id="List">

<table>
	<thead>
		<tr>
			<td>Customer ID</td>
			<td>User ID</td>
			<td>First Name</td>
			<td>Last Name</td>
			<td id="noBorder" style="width: 94px;"></td>
			<td id="noBorder" style="width: 94px;"></td>
			<td id="noBorder" style="width: 111px;"></td>
		</tr>
	</thead>
	
	<tbody>
		<% @customers.each do |customer| %>
		 <tr>
			 <td><%= customer.id %></td>
			 <td><%= customer.user_id ||= 'nil' %></td>
			 <td><%= customer.first_name ||= 'nil' %></td>
			 <td><%= customer.last_name ||= 'nil' %></td>
			 <td id="noBorder"><%= link_to customer_path(customer.id), :id => "showLink" do %>
				<p><%= image_tag("arrow.png", :alt => "Arrow")%>Show</p>
			<% end %>
			</td>
			<td id="noBorder"><%= link_to edit_customer_path(customer.id), :id => "editLink" do %>
				<p><%= image_tag("arrow.png", :alt => "Arrow")%>Edit</p>
			<% end %>
			</td>
			<td id="noBorder" style><%= link_to customer, confirm: 'Are you sure?', method: :delete, :id => "destroyLink" do %>
				<p><%= image_tag("cross.png", :alt => "Cross")%>Delete</p>
			<% end %>
			</td>
		 </tr>
		<% end %>
	</tbody>
</table>
</div><br/>
<%=link_to new_customer_path do %>
	<h1 id="createCustomerAccess"><%= image_tag("arrow.png", :alt => "Arrow")%>Create</h1>
<% end %>

<%=link_to admin_path do %>
	<h1 id="adminAccess"><%= image_tag("arrow.png", :alt => "Arrow")%>Back</h1>
<% end %>