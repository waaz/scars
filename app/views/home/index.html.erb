<%= stylesheet_link_tag    "scrollable-horizontal.css" %>
<%= stylesheet_link_tag    "scrollable-buttons.css" %>
<%= javascript_include_tag "http://cdn.jquerytools.org/1.2.6/full/jquery.tools.min.js" %>
<script src="http://cdn.jquerytools.org/1.2.6/full/jquery.tools.min.js" type="text/javascript"></script>
 
<div id="advertisement">
	<!-- root element for scrollable -->
	<div class="scrollable" id="scrollable">
	 
	  <!-- root element for the items -->
	  <div class="items">
	 
		<!-- first car -->
		<div>
			<%= image_tag("car1.png", :alt => "Car 1", :style => "margin-left: 270px;")%>
		</div>
	 
		<!-- second car -->
		<div>
			<%= image_tag("car2.png", :alt => "Car 2", :style => "margin-left: 270px;")%>
		</div>
	 
	  </div>
	 
	</div>
</div>

<script type="text/javascript">
		$(function() {
		// initialize scrollable
		$(".scrollable").scrollable({circular: true}).autoscroll({interval: 3000});
		});
	</script>	

