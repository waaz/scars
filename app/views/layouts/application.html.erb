<!DOCTYPE html>
<html>
    <head>
     <title>Scars</title>
     <%= stylesheet_link_tag    "application", :media => "all" %>
     <%= javascript_include_tag "application" %>
     <%= csrf_meta_tags %>
    </head>
	<body>
	 <div id="main_wrapper">
	  <header>
	   <%= image_tag("logo.png", :alt => "Sample App") %>
	   <%= flash[:notice] %>
	   <% if current_user %>
        <p>Logged in as <%= current_user.email %>.</p>
        <%= link_to "Logout", "/logout" %>
        <% else %>
        <ul>
         <li id="main_login"><a href="#" onclick=myFunction();>Login<%= image_tag("arrow_down.png", :alt => "Arrow Down", :id => "Arrow") %></a></li>
		</ul>
       <% end %>
	   <div id="login_dropdown">
			<%= render partial: "sessions/new" %>
        </div>
	  </header>
	 <div id="main_nav">
	  <nav>
	   <ul>
	    <li><%= link_to 'Home', root_path%></li>
	    <li><%=link_to 'Booking', new_booking_path%></li>
	    <li><a href="#"> Contact</a></li>
	    <li><a href="#"> About</a></li>
	   </ul>
	  </nav>
	 </div>
	 <section>
	  <article>
	   <%= yield %>
	  </article>
	  <aside>
	   <h1>New Offer </h1>
	   <%= image_tag("promo.jpeg", :alt => "Promotional Material")%>
	  </aside>
	 </section>
	 <footer>
	  <div id="rights"> All content belongs to Clear Solutions </div>
	 </footer>
	</div>
   </body>

    <script language="JavaScript" type="text/javascript">
        window.onload = function(){
            new JsDatePick({
                useMode:2,
                target:"dorInput",
                dateFormat:"%Y-%m-%d",
                yearsRange:[2012,2014]
            });
            new JsDatePick({
             useMode:2,
             target:"dodInput",
             dateFormat:"%Y-%m-%d",
             yearsRange:[2012,2014]
             });
        };

   function myFunction(){
   var drop = document.getElementById('login_dropdown');
   var arrow = document.getElementById('Arrow');
	if(drop.style.display == "block"){
		drop.style.display = "none";
		arrow.src = "/assets/arrow_down.png";
		arrow.alt = "Arrow Down";
	}
	else{
		drop.style.display = "block";
		arrow.src = "/assets/arrow_up.png";
		arrow.alt = "Arrow Up";
	}
   }
   </script>
</html>
