<h1>Listing orders</h1>

<table>
  <tr>
    <th>Payement</th>
    <th>Ip address string</th>
    <th>First name</th>
    <th>Last name</th>
    <th>Card type</th>
    <th>Billing address line 1</th>
    <th>Billing address line 2</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @orders.each do |order| %>
  <tr>
    <td><%= order.payement_id %></td>
    <td><%= order.ip_address_string %></td>
    <td><%= order.first_name %></td>
    <td><%= order.last_name %></td>
    <td><%= order.card_type %></td>
    <td><%= order.billing_address_line_1 %></td>
    <td><%= order.billing_address_line_2 %></td>
    <td><%= link_to 'Show', order %></td>
    <td><%= link_to 'Edit', edit_order_path(order) %></td>
    <td><%= link_to 'Destroy', order, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

