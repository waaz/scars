<h1>Modify Users</h1>
<table>
<thead>
<tr><td>Edit</td><td>Destroy</td><td>User ID</td><td>Email</td><td>Details</td><td>Admin</td></tr>
</thead>
<tbody>
<% @users.each do |user| %>
 <td><%= link_to 'edit', edit_user_path(user.id) %></td>
 <td><%= link_to 'destroy', user, confirm: 'Are you sure?', method: :delete %></td>
 <td><%= user.id %></td>
 <td><%= user.email %></td>
 <% if not user.is_admin %>
	<% if user.is_customer %>
	 <td>Yes</td>
	 <td>No</td>
	<% else %>
	 <td>No</td>
	 <td>No</td>
	<% end %>
 <% else %>
    <td>N/A</td>
	<td>Yes</td>
 <% end %>
 </tr>
<% end %>
</tbody>
</table>
<br/>
